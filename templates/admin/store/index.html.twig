{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <h1>Products index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ref</th>
                <th>Ean</th>
                <th>Slug</th>
                <th>Qte</th>
                <th>QteLogistic</th>
                <th>IsValid</th>
                <th>IsShow</th>
                <th>DateStart</th>
                <th>DateEnd</th>
                <th>Type</th>
                <th>Supplier</th>
                <th>TransportCode</th>
                <th>Description</th>
                <th>Price</th>
                <th>Sold</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.ref }}</td>
                <td>{{ product.ean }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.qte }}</td>
                <td>{{ product.qteLogistic }}</td>
                <td>{{ product.isValid ? 'Yes' : 'No' }}</td>
                <td>{{ product.isShow ? 'Yes' : 'No' }}</td>
                <td>{{ product.dateStart ? product.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.dateEnd ? product.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.type }}</td>
                <td>{{ product.supplier }}</td>
                <td>{{ product.transportCode }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.sold ? 'Yes' : 'No' }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_products_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_products_new') }}">Create new</a>
{% endblock %}
