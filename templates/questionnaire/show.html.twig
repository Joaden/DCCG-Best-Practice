{% block title %}Questionnaire{% endblock %}

{% block body %}
    <h1>Questionnaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ questionnaire.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ questionnaire.nom }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ questionnaire.libelle }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ questionnaire.type }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ questionnaire.title }}</td>
            </tr>
            <tr>
                <th>Sum</th>
                <td>{{ questionnaire.sum }}</td>
            </tr>
            <tr>
                <th>Is_valid</th>
                <td>{{ questionnaire.isValid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
